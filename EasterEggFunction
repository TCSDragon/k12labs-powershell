
function EasterEgg() {
$t = @"
  _____                       _____ _          _ _ 
 |  __ \                     / ____| |        | | |
 | |__) |____      _____ _ __ (___ | |__   ___| | |
 |  ___/ _ \ \ /\ / / _ \ '__\___ \| '_ \ / _ \ | |
 | |  | (_) \ V  V /  __/ |  ____) | | | |  __/ | |
 |_|   \___/ \_/\_/ \___|_| |_____/|_| |_|\___|_|_|
                                                   
"@

   for ($i=0; $i -lt $t.length;$i++) {
      if ($i%2) {
         $c = "red"
      }
      elseif ($i%5) {
         $c = "yellow"
      }
      elseif ($i%7) {
         $c = "green"
      }
      else {
         $c = "white"
      }
      Write-Host $t[$i] -NoNewline -ForegroundColor $c
   }
}
